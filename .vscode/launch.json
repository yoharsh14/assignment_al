{
  "version": "0.2.0",
  "configurations": [
    {
        "name": ".NET MAUI",
        "type": "maui",
        "request": "launch",
        "preLaunchTask": "maui: Build"
    },
      {
          "name": "ASP.NET Core Launch (web)",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build",
          "program": "${workspaceFolder}/bin/Debug/net8.0/WDP2024Assignment2.dll",
          "args": [],
          "cwd": "${workspaceFolder}",
          "stopAtEntry": false,
          "serverReadyAction": {
              "action": "openExternally",
              "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
          },
          "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
          },
          "sourceFileMap": {
              "/Views": "${workspaceFolder}/Views"
          },
          "dotnetRunMessages": true,
          "internalConsoleOptions": "openOnSessionStart"
      }
  ]
}
